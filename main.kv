<NCard@MDBoxLayout>:
    canvas.before:
        Color:
            rgba:(0,0,0,.1)
        RoundedRectangle:
            size:self.size
            pos:self.pos[0]+6,self.pos[1]-4
            radius:[20]
        Color:
            rgba:1, 1, 1, 0.8
